<Window x:Class="FFYLife.NewGameNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:FFYLife"
        mc:Ignorable="d"
        Title="New Game" Height="300" Width="440">
    <Grid Background="Beige" Margin="0,0,0,-1" >

        <Label TextElement.FontSize="30" VerticalAlignment="Top" Margin="30,72,79,0" Height="53">Nickname?</Label>
        <TextBox x:Name="NameTextBox" TextElement.FontSize="20" VerticalAlignment="Top" Focusable="True" Margin="26,182,161,0" Height="40" BorderThickness="4" BorderBrush="Brown" />
        <Button Height="40" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="312,0,0,63" Click="StartGameClick" IsDefault="True">Start game</Button>
        <RadioButton  x:Name="Radio1" IsChecked="True" Content="Light" HorizontalAlignment="Left" Margin="329,52,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Radio2" Content="Heavy" HorizontalAlignment="Left" Margin="329,72,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
